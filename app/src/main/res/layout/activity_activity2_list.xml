<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ativities_background"
    tools:context=".Activity2_List"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/precioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-black"
            android:text="PRECIO"
            android:textColor="#B8B8B8"
            android:textSize="24sp"></TextView>

        <TextView
            android:id="@+id/productosText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="PRODUCTOS"
            android:textColor="#B8B8B8"
            android:textSize="24sp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="nombre"
            android:textColor="@color/grey"
            android:textColorHint="#959595"
            android:textSize="24sp"></EditText>

        <EditText
            android:id="@+id/txtCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtNombre"
            android:fontFamily="sans-serif-light"
            android:hint="cantidad"
            android:textColor="@color/grey"
            android:textColorHint="#959595"
            android:textSize="24sp"></EditText>

        <EditText
            android:id="@+id/txtPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtCantidad"
            android:fontFamily="sans-serif-light"
            android:hint="precio"
            android:textColor="@color/grey"
            android:textColorHint="#959595"
            android:textSize="24sp"></EditText>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGREGAR"
            android:id="@+id/btnAgregar"
            android:backgroundTint="@color/grey"
            android:textColor="@color/black">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELIMINAR"
            android:id="@+id/btnEliminar"
            android:layout_toRightOf="@+id/btnAgregar"
            android:backgroundTint="@color/grey"
            android:textColor="@color/black">
        </Button>
    </RelativeLayout>

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:background="#7A000000"
        android:backgroundTint="@color/grey"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/productosButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00FFFFFF"
            android:drawableRight="@drawable/arroow"
            android:text="."
            android:textColor="@color/black" />

        <Button
            android:id="@+id/contactoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:drawableRight="@drawable/arrow"
            android:background="#00FFFFFF"
            android:text="."
            android:textColor="@color/black"/>
    </RelativeLayout>


</LinearLayout>